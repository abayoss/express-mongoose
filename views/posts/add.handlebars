<div class="card card-body">
  <h3>Video Post</h3>
  <form action="/posts/add" method="post" enctype="multipart/form-data">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" name="title" value="{{title}}" required>
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      <input type="text" class="form-control" value="{{content}}" name="content">
    </div>
    <div class="form-group">
      <label for="image">Image</label>
      <input type="file" name="image" id="fileUpload" hidden>
      <button class="btn btn-block btn-secondary" id="imgUp">add image</button>
    </div>
    <button type="submit" class="btn btn-primary" >Submit</button>
  </form>
</div>
<script>
  document.getElementById("imgUp").addEventListener('click', function(event) {
    event.preventDefault();
    document.getElementById("fileUpload").click();
  })

</script>