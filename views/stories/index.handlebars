{{#if Stories}}
<h1>Stories</h1>
{{/if}}


<div class="row">
    {{#each stories}}
    <div class="col s12 m4">
        <div class="card">
            <a href="/stories/Show/{{_id}}">
                <div class="card-image" style="max-height: 30vh;">
                    {{!-- <img src="{{image}}" alt="{{title}}" class="responsive-img"
                        style="height:100%;height:-webkit-fill-available;object-fit:cover;"> --}}
                    {{!-- <span class="card-title">
                        {{title}}
                    </span> --}}
                    {{#if ../user}}
                    {{{editIcon creator.id ../user.id _id}}}
                    {{/if}}
                    {{!-- <a href="/stories/edit/{{id}}" class="btn-floating halfway-fab red">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                </a> --}}
                </div>
            </a>
            <div class="card-content">
                <span class="card-title">
                    {{title}}
                </span>
                <div class="divider"></div>
                {{!-- <h4 class="">{{title}}</h4> --}}
                <p class="story-text">
                    {{{ stripTags (truncate body 150) }}}
                    <a href="/stories/Show/{{_id}}" class="purple-text lighten-3"> Read More</a>
                </p>
            </div>
            {{!-- votes --}}
            <div class="card-action center-align">
                <a {{#if ../user}} onclick="sendVote('{{_id}}',{{currentUserDirection}}, 'upVote')" {{else}}
                    href="/auth/login" {{/if}} id="upVote-{{_id}}"
                    class=" {{#if currentUserVotedUp }} purple-text {{else}} black-text {{/if}}"
                    style="display: contents; cursor: pointer;">
                    <i class="fa fa-chevron-up" aria-hidden="true"></i>
                </a>
                <p id="totalVotes-{{_id}}"
                    data-key="{{#if currentUserVotedUp }}up{{/if}}{{#if currentUserVotedDown }}down{{/if}}">
                    {{totalVotes}}
                </p>
                <a {{#if ../user}} onclick="sendVote('{{_id}}', {{currentUserDirection}},'downVote')" {{else}}
                    href="/auth/login" {{/if}} id="downVote-{{_id}}"
                    class=" {{#if currentUserVotedDown }} red-text {{else}} black-text {{/if}}"
                    style="display: contents;cursor: pointer;">
                    <i class="fa fa-chevron-down" aria-hidden="true"></i>
                </a>
            </div>
            {{!-- creator --}}
            <div class="card-action center-align">
                <div class="chip">
                    <img src="{{creator.image}}" alt="Creator">
                    <a href="/stories/user/{{creator.id}}" class="black-text">
                        {{creator.firstName}} {{creator.lastName}}
                    </a>
                </div>
            </div>
        </div>
    </div>
    {{else}}
    <div class="row">
        <p>it seems that there is no stories
    </div>
    {{/each}}
</div>

<script src="/js/voting.js"></script>