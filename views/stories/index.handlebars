<h1>Stories</h1>

<div class="row">
    {{#each stories}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{#if ../user}}
                {{{editIcon creator.id ../user.id id}}}
                {{/if}}
                {{!-- <a href="/stories/edit/{{id}}" class="btn-floating halfway-fab red">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                </a> --}}
            </div>
            <div class="card-content">
                <h4 class="">{{title}}</h4>
                <p class="story-text">
                    {{{ stripTags (truncate body 150) }}}
                <a href="/stories/Show/{{id}}" class="purple-text lighten-3">...Read More</a>
                </p>
            </div>
            <div class="card-action center-align">
                <div class="chip">
                    <img src="{{creator.image}}" alt="Creator">
                    <a href="/stories/user/{{creator.id}}" class="black-text">
                    {{creator.firstName}} {{creator.lastName}}
                    </a>
                </div>
                {{!-- <a href="#">This is a link</a>
                <a href="#">This is a link</a> --}}
            </div>
        </div>
    </div>
    {{else}}
    <p>no stories</p>
    {{/each}}
</div>