<div class="row">
    <div class="col s12 m8">
        <h2>{{story.title}}</h2>
        <div class="card">
            <div class="card-image">
                <small>{{{ editIcon story.creator.id user.id story.id }}}</small>
                {{!-- <a href="/stories/edit/{{story.id}}" class="btn-floating halfway-fab red">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                </a> --}}
            </div>
            <div class="card-content">
                <span class="card-title">{{formatDate story.date 'MMMM Do YYYY'}}</span>
                <p class="card-action">
                    {{!-- {{#if user == story.creator.id}} --}}
                    {{{story.body}}}
                </p>
            </div>
        </div>
        {{#if story.allowComments}}
        <div class="card">
            <div class="card-content">
                <span class="card-title">Comments</span>
                {{#if user}}
                <form action="/stories/comment/{{story.id}}" method="post">
                    <div class="input-field">
                        <textarea name="commentBody" class="materialize-textarea"></textarea>
                        <label for="commentBody">Add comment</label>
                    </div>
                    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                    </button>
                </form>
                {{else}}
                <p>Please <a href="/Auth/login">Log</a> in to leave a comment </p>
                {{/if}}
            </div>
            {{#each story.comments}}
            <div class="card-action">
                <h6>{{commentBody}}</h6>
                <div class="right-align">
                    <small>Posted {{formatDate commentDate 'MMMM Do YYYY'}} by : </small>
                    <div class="chip">
                        <img src="{{commentCreator.image}}" alt="Creator">
                        <a href="/stories/user/{{commentCreator.id}}" class="black-text">
                            {{commentCreator.firstName}} {{CommentCreator.lastName}}
                        </a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/if}}
    </div>


    <div class="col s12 m4">
        <div class="card">
            <div class="card-content center-align">
                <h4 class="center">{{story.creator.firstName}} {{story.creator.lastName}}</h4>
                <img src="{{story.creator.image}}" alt="" class="circle responsive-img">
            </div>
            <div class="card-action center-align">
                <a href="/stories/user/{{story.creator.id}}">More From {{story.creator.firstName}}</a>
            </div>
        </div>
    </div>


</div>